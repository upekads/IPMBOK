<%= form_for(@link, html: {class: "form-horizontal"}) do |f| %>
    <% if @link.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@recipe.errors.count, "error") %>
            prohibited this recipe from being saved:
          </h2>
          <ul>
            <% @link.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <div class="col-lg-3"><%= f.label :name %></div>
      <div class="col-lg-9"><%= f.text_field :name, :class => "form-control" %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-3"><%= f.label :url %></div>
      <div class="col-lg-9"><%= f.text_area :url, :class => "form-control" %></div>
    </div>
    </br>
    <div class="form-group">
      <div class="col-lg-3"></div>
      <div class="col-lg-9 text-right">
        <%= f.submit "Submit", :class => "btn btn-default" %> &nbsp;&nbsp;
        <%= link_to 'Back', links_path, :class => "btn btn-default" %>
      </div>
    </div>
<% end %>
