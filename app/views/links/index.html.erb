<div class="container">
  <div class="page-header">
    <h1>Listing recipes</h1>
  </div>
  <br/>
  <div class="row">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @links.each do |link| %>
          <tr>
            <td><%= link.name %></td>
            <td><%= link.url %></td>
            <td><%= link_to 'Show', link %></td>
            <td><%= link_to 'Edit', edit_link_path(link) %></td>
            <td><%= link_to 'Destroy', link, method: :delete,
                            data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <div class="col-lg-12 text-right"><%= link_to 'New Recipe', new_link_path,
                                                  :class => "btn btn-default" %></div>
  </div>
</div>
