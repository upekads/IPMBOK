<div class="container">
  <div class="page-header">
    <h1>Users</h1>
  </div>
  <br>

  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="4"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td style="width: 20%"><%= user.firstname %> <%= user.lastname %></td>
            <td style="width: 20%"><%= user.email %></td>
            <td style="width: 30%"><%= Role.find(user.role_id).title %></td>


            <td><%= link_to 'Delete', delete_user_path(:id => user.id) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>


  </div>
</div>


