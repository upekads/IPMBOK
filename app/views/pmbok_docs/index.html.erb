<div class="container">
  <div class="page-header">
    <h1>PMBoK Documents</h1>
  </div>
  <br>

  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Sub process(code)</th>
        <th width="60%">Name</th>
        <th colspan="3"></th>
      </tr>
      </thead>

  <tbody>
    <% @pmbok_docs.each do |pmbok_doc| %>
      <tr>
        <td><%= SubprocessGroup.find_by_id(pmbok_doc.subprocess_group_id).code %></td>
        <td><%= pmbok_doc.name %></td>
        <td>
          <%= link_to pmbok_doc, :class => "btn", :method => :get do %>
              <span class="glyphicon glyphicon-list" title="Manage Templates"></span>
          <% end %></td>
        <td><%= link_to view_workflow_path(:id => pmbok_doc.id), :class => "btn", :method => :get do %>
            <span class="glyphicon glyphicon-refresh" title="View Workflow"></span>
        <% end %><td>
          <%= link_to edit_pmbok_doc_path(pmbok_doc), :class => "btn", :method => :get do %>
              <span class="glyphicon glyphicon-pencil" title="Edit"></span>
          <% end %>

          <% button_to 'Edit', edit_pmbok_doc_path(pmbok_doc), :class => "btn btn-warning btn-sm", :method => :get %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <div class="col-lg-12 text-right"><%= link_to 'New PMBok Doc', new_pmbok_doc_path, :class => "btn btn-primary btn-lg" %></div>
</div>
</div>

