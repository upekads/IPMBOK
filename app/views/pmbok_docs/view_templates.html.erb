<div class="container">
  <div class="page-header">
    <h1><%= @pmbok_doc.name %></h1>
  </div>
  <br>



  <h4><td>Sub process group of:
     <%= SubprocessGroup.find_by_id(@pmbok_doc.subprocess_group_id).code %>
        -<%= SubprocessGroup.find_by_id(@pmbok_doc.subprocess_group_id).name %></h4>




  </br>



  <% if @pmbok_doc.templates.size > 0 %>

      <h4> Templates available</h4>
      <table class="table">
        <thead>
        <tr>
          <th colspan="4">File Name</th>
          <th colspan="3">Uploaded By</th>

        </tr>
        </thead>

        <tbody>
        <% @pmbok_doc.templates.each do |ea| %>
            <tr>

              <td colspan="3"><%= link_to ea.document_file_name, ea.document.url(:original, false), :target => "_blank" %></td>
              <td colspan="4"><%= ea.user.email %></td>
            </tr>
        <% end %>

        </tbody>
      </table>
  <% else %>
      <h4 class="text-danger">No templates are available for this document type yet</h4>
      </br>
  <% end %>

  </br>
  <%= button_to 'Back', pmbok_docs_path, :class => "btn btn-danger", :method => :get %>


</div>
