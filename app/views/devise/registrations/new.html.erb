<div class="container">
  <div class="page-header">
    <h1>Sign up</h1>
  </div>

  <%= form_for(resource, as: resource_name,url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="col-lg-3"><%= f.label :email %></div>
        <div class="col-lg-5"><%= f.email_field :email, autofocus: true, :class => "form-control", :required => true %></div>
      </div>

      <div class="form-group">
        <div class="col-lg-3"><%= f.label :firstname %></div>
        <div class="col-lg-5"><%= f.text_field :firstname, autofocus: true, :class => "form-control", :required => true %></div>
      </div>

      <div class="form-group">
        <div class="col-lg-3"><%= f.label :lastname %></div>
        <div class="col-lg-5"><%= f.text_field :lastname, autofocus: true, :class => "form-control", :required => true %></div>
      </div>

      <div class="form-group">
        <div class="col-lg-3"><%= f.label :password %><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %></div>
        <div class="col-lg-5"><%= f.password_field :password, autocomplete: "off", :class => "form-control", :required => true %></div>
      </div>
      <div class="form-group">
        <div class="col-lg-3"><%= f.label :password_confirmation %></div>
        <div class="col-lg-5"><%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :required => true %></div>
      </div>
      <div class="form-group">
        <div class="col-lg-3"><%= f.label "Role" %></div>
        <div class="col-lg-5"><%= f.collection_select(:role_id, Role.all, :id, :title , :class => "form-control") %></div>
      </div>
      <div class="form-group">
        <div class="col-lg-3">
          <%= f.submit "Sign up", :class => "btn btn-primary" %> &nbsp;&nbsp;
          <%= link_to 'Back', root_path, :class => "btn btn-default" %>
        </div>
      </div>

  <% end %>

</div>
