<div class="container">
  <div class="page-header">
    <h1>Search result</h1>
  </div>
  <br/>

  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Project name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Status</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% if !@projects.nil? %>
      <% @projects.each do |project| %>
          <tr>
                <td><%= project.name %></td>
            <td>
              <% if project.start_date != nil %>
                  <%= project.start_date.strftime("%d/%m/%Y") %>
              <% else %>
                  <%= project.start_date%>
              <% end %>
            </td>
            <td>
              <% if project.end_date != nil %>
                  <%= project.end_date.strftime("%d/%m/%Y") %>
              <% else %>
                  <%= project.end_date %>
              <% end %>
            </td>
                <td><%= project.status %></td>
                <td><%= link_to 'Show', project %></td>

          </tr>
      <% end %>
      <% end %>
      </tbody>
    </table>
    <%= button_to 'Back', '/search/index', :class => "btn btn-danger", :method => :get %>
  </div>

</div>

