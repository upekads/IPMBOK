<script type="text/javascript">
    $(function() {
        $("#start_date").datepicker({

            onSelect: function () {
                var minDate = $(this).datepicker('getDate');
                $("#end_date").datepicker('option', 'minDate', minDate);
            }
        });

        $("#end_date").datepicker({

            onSelect: function () {
                var maxDate = $(this).datepicker('getDate');
                $("#start_date").datepicker('option', 'maxDate', maxDate);
            }
        });
    });
</script>

<div class="container">
  <div class="page-header">
    <h1>Search</h1>
  </div>
  <br/>
  <%= form_tag('/search/search_result', html: {class: "form-horizontal"}) do %>
      <div class="form-group">
        <%= label_tag(:keyword, 'Project name', :class => "col-lg-2 control-label") %>
        <div class="col-sm-4">
          <%= text_field_tag(:name, '', :class => "col-lg-4 form-control") %>
        </div>
      </div>
      <br>
      <br>
      <br>
      <div class="form-group">
        <%= label_tag(:start_date, 'Start date', :class => "col-lg-2 control-label") %>
        <div class="col-sm-2">
          <%= text_field_tag(:start_date, '', :class => "col-lg-4 form-control") %>
        </div>
      </div>
      <br>
      <br>
      <div class="form-group">
        <%= label_tag(:end_date, 'End date', :class => "col-lg-2 control-label") %>
        <div class="col-sm-2">
          <%= text_field_tag(:end_date, '', :class => "col-lg-4 form-control") %>
        </div>
      </div>
      <br>
      <br>
      <div class="form-group">
        <%= label_tag(:status, 'Status', :class => "col-lg-2 control-label") %>
        <div class="col-sm-2">
          <%= select_tag :status, options_for_select([["All","All"],["Open","Open"],["In progress","In progress"],["Suspended","Suspended"],["Completed","Completed"]]) %>
        </div>
      </div>
      <br>
      <br>
      <br>

      <div class="form-group">
        <div class="col-sm-2">
          <%= submit_tag("Search", :class => "btn btn-primary") %>
        </div>
      </div>
<% end %>



</div>

